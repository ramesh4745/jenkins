pipeline {
    agent any

    environment {
    SVC_ACCOUNT_KEY = credentials('id-auth')
  }
     
    stages {
      	stage('Set creds') {
            steps {
              
                sh 'echo $SVC_ACCOUNT_KEY | base64 -d > .ramesh.json'
		            sh 'pwd' 
               
            }
        }

	
	stage('Auth-Project') {
	 steps {
		 dir('module-3')
		 {
    
        sh 'gcloud auth activate-service-account  ramesh@test-proj08.iam.gserviceaccount.com --key-file=ramesh.json'
    }
    }
	}
